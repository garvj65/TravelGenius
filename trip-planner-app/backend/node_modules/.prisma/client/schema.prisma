datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id            String         @id @default(uuid())
  userId        String
  title         String
  description   String?
  startDate     DateTime?
  endDate       DateTime?
  destination   String
  budget        Float?
  status        String         @default("planning")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  activities    Activity[]
  conversations Conversation[]
}

model Activity {
  id          String    @id @default(uuid())
  tripId      String
  trip        Trip      @relation(fields: [tripId], references: [id])
  day         Int
  title       String
  description String?
  location    String?
  startTime   DateTime?
  duration    Int?
  cost        Float?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Conversation {
  id          String   @id @default(uuid())
  userId      String
  tripId      String?
  trip        Trip?    @relation(fields: [tripId], references: [id])
  prompt      String
  response    String   @db.Text
  tripContext String?  @db.Text
  createdAt   DateTime @default(now())
}

model UserPreference {
  id                  String   @id @default(uuid())
  userId              String   @unique
  preferredCurrency   String   @default("USD")
  preferredLanguage   String   @default("en")
  travelStyle         String[]
  dietaryRestrictions String[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
